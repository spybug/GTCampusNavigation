<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.spybug.gtnav.MainActivity"
    android:rowCount="2"
    android:columnCount="1">

    <RelativeLayout android:layout_row="0">

        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true">
        </SearchView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar"
            android:layout_centerVertical="true"
            android:text="Swipe from left side for menu!"/>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:rowCount="1"
        android:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/directions_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_marginStart="50dp"
            android:layout_row="0"
            android:adjustViewBounds="false"
            android:background="@drawable/round_button"
            android:cropToPadding="false"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_black"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/buses_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:background="@drawable/round_button"
            android:cropToPadding="false"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bus_black"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/bikes_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="2"
            android:layout_marginEnd="50dp"
            android:layout_row="0"
            android:background="@drawable/round_button"
            android:cropToPadding="false"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bike_black"
            android:textAlignment="center"/>

    </GridLayout>

</GridLayout>
